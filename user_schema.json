{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "User",
  "description": "305Soft JSON schema for user documents in the Firestore users collection",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "uid": {
      "description": "Firebase Authentication user ID",
      "type": "string"
    },
    "email": {
      "description": "User email address",
      "type": "string",
      "format": "email"
    },
    "display_name": {
      "description": "User display name",
      "type": "string"
    },
    "address": {
      "description": "User address",
      "type": "string"
    },
    "birthday": {
      "description": "User birthday stored as Firestore timestamp",
      "type": "string",
      "format": "date-time"
    },
    "created_time": {
      "description": "Time the user document was created",
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["uid", "email", "display_name", "created_time"]
}
